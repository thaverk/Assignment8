<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingCart.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingCart"
    Shell.FlyoutBehavior="Disabled">

   
    <TabBar >

        <Tab Title="Profile">
            <ShellContent
             
             ContentTemplate="{DataTemplate local:SignUp}"
             Route="SignUp" />

        </Tab>

        <Tab Title="Cart">

            <ShellContent
     Title="Cart"
     ContentTemplate="{DataTemplate local:ShoppingCart}"
      Route="ShoppingCart" />

        </Tab>

        <Tab Title="MainPage">

            <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
             Route="MainPage" />        

        </Tab>


    </TabBar>
</Shell>
